@using NSE.WebApp.MVC.Extensions;
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.EstahAutenticado())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Mansage">Ola @AppUser.ObterUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identidade" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-controller="Identidade" asp-action="Registro">Criar conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identidade" asp-action="Login">Login</a>
        </li>
    }
</ul>